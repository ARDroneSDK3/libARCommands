                <enum name="2_4ghz">
                    2.4 GHz band
                </enum>
                <enum name="5ghz">
                    5 GHz band
                </enum>
            </arg>
            <arg name="channel" type="u8">
                Channel of the AP
            </arg>
        </cmd>
        
        <cmd name="AllWifiScanChanged">
            State sent when all scanning result sent
        </cmd>
    </class>
</project>
